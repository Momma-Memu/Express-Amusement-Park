extends layout.pug

block content
    h3= park.parkName
    div(class='py-4')
      p Proceed with deleting this park?
    div
      form(action=`/park/delete/${park.id}`, method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        button(type="submit" class="btn btn-danger") Delete Park
        a(href=`/park/${park.id}` class='btn btn-warning ml-2') Cancel
